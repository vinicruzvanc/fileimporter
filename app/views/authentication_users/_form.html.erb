<%= form_for @authentication do |form| %>
 <% if @authentication.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@authentication.errors.count, "erro") %> impedem de salvar o usuário:</h2>
      <ul>
        <% @authentication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :username, "Nome de Usuário", style: "display: block" %>
    <%= form.text_field :username, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :password, "Senha", style: "display: block" %>
    <%= form.password_field :password, class:"form-control" %>
    <%= form.label :password_confirmation, "Confirme a senha", style: "display: block" %>
    <%= form.password_field :password_confirmation, class:"form-control" %>
  </div>
 <%= form.submit "Confirmar", class:"btn btn-secondary" %>
<% end %>